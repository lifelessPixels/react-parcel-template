{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "module": "ES2015",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "baseUrl": "./src",
    "typeRoots": [
      "node_modules/@types"
    ],
  },
  "include": [
    "src/**/*"
  ]
}
 